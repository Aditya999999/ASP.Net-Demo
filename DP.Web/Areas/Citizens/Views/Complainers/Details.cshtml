                    @Html.DisplayNameFor(model => model.HouseNumber) - @Html.DisplayFor(model => model.HouseNumber)<br />
                    @Html.DisplayNameFor(model => model.Village) -  @Html.DisplayFor(model => model.Village)<br />
                    @Html.DisplayNameFor(model => model.PostOffice) - @Html.DisplayFor(model => model.PostOffice)<br />
                    @Html.DisplayNameFor(model => model.PinCode) - @Html.DisplayFor(model => model.PinCode)<br />
                    @Html.DisplayNameFor(model => model.District) - @Html.DisplayFor(model => model.District)<br />
                    @Html.DisplayNameFor(model => model.State) -  @Html.DisplayFor(model => model.State)<br />
                     @Html.DisplayNameFor(model => model.Country) - @Html.DisplayFor(model => model.Country)
