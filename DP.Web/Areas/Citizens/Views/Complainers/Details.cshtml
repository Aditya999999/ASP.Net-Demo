@model DP.Web.Models.Complainer

@{
    ViewData["Title"] = "Complainer'sDetails";
    var photoPath = "/Images/" + (Model.ImageUpload ?? "pic29.jpg");
}

<h1>Your Details</h1>


    <h4>Complainer</h4>
