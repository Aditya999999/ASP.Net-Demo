@model DP.Web.Models.Incident

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Incident</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IncidentId" />
            <div class="form-group">
                <label asp-for="IncidentDetail" class="control-label"></label>
                <input asp-for="IncidentDetail" class="form-control" />
                <span asp-validation-for="IncidentDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload" class="control-label"></label>
                <input asp-for="FileUpload" class="form-control" />
                <span asp-validation-for="FileUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPeopleDied" class="control-label"></label>
                <input asp-for="NumberOfPeopleDied" class="form-control" />
                <span asp-validation-for="NumberOfPeopleDied" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPeopleInjured" class="control-label"></label>
                <input asp-for="NumberOfPeopleInjured" class="form-control" />
                <span asp-validation-for="NumberOfPeopleInjured" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsVideoFootageAvailable" /> @Html.DisplayNameFor(model => model.IsVideoFootageAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ComplainerId" class="control-label"></label>
                <select asp-for="ComplainerId" class="form-control" asp-items="ViewBag.ComplainerId"></select>
                <span asp-validation-for="ComplainerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
