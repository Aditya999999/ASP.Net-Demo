@{
    this.Layout = "~/Pages/Shared/_Layout.cshtml";
    string author = "Manoj Kumar Sharma";
}
<!-- HTML Comment-->
@*Server Side Commment*@

<h1>Index2Demo  @author.ToUpper()</h1>
<ul>
    @for(int i = 0; i < 5; i++)
    {
        <li>
            if((i + 1) % 2 == 0)
            {
                <b>Point #@(i + 1)</b>
            }
            else
            {
                <span>Point #@(i + 1)</span>
            }
        </li>
    }
</ul>
